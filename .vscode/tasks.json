{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Test Server",
			"type": "shell",
			"command": "node",
			"args": [
				"test-server.js"
			],
			"group": "test",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Backend Server",
			"type": "shell",
			"command": "node",
			"args": [
				"main.js"
			],
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Frontend Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}